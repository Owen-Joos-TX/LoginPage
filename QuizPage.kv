<QuizManager>:
    Question1Screen:
        name: "question1"
    Question2Screen:
        name: "question2"
    CorrectScreen:
        name: "correct"
    IncorrectScreen:
        name: "incorrect"


<Question1Screen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 5
        Label:
            text: "Dogs or Cats. only one correct answer"

        BoxLayout:
            Button:
                text: "Dogs"
                on_release: root.answer_question(True)
            Button:
                text : "Cats"
                on_release: root.answer_question(False)


<Question2Screen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 5
        Label:
            text: "Do you want to be a beaver or a platapus"
            font_size: 25

        TextInput:
            id: answer
            size_hint: .5, .3

        Button:
            text: "Enter"
            size_hint: 1,.7
            on_release: root.answer_question(answer.text)

        Label:
            id: test
            text: ""
<CorrectScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "OMG You are right hollyyyyy"
        Button:
            text: "KEEP GOING"
            on_release: root.answer_question(True)




<IncorrectScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "You suck so much lmao "
        Button:
            text: "Try again"
            on_release: root.answer_question(True)